<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="9"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    tools:context=".activity_persinal_details">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bookdetail"
        android:focusable="true"
        android:textColor="@android:color/black"
        android:hint="Ім'я"
        android:focusableInTouchMode="true"
        android:id="@+id/editname"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bookdetail"
        android:hint="Номер телефону"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:maxLength="10"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:ems="10"
        android:id="@+id/editphone"
        android:layout_weight="2" />


    <TextView
        android:layout_weight="2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/bookdetail"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Tue 12 JUL  12:30 PM"
        android:textSize="16dp"
        android:id="@+id/textdatetime" />
    <TextView
        android:layout_weight="2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/bookdetail"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text=" "
        android:textSize="16dp"
        android:id="@+id/texttable"/>
    <Button
        android:id="@+id/bookdetailbutton"
        style="@style/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/btnSignUp"
        android:textColor="@android:color/white"
        android:text="ПІДТВЕРДИТИ БРОНЮВАННЯ"
         />







</LinearLayout>